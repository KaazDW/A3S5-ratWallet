<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/base.css') }}">
        {% block stylesheets %}

        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>

    <body>
        {% if app.user %}
        <header>
            <div class="user">
                <img src="{{ asset('assets/images/logo/rW-logo-icon-white.png') }}" class="icon" alt="Logo du site">
                <span>{{ app.user.username }}.</span>
            </div>
            <h1 class="uptitle">ratWallet.</h1>
        </header>
        {% endif %}
        <style>
            /* .border *{
                border: 2px solid red;
            } */
        </style>
        <main>
            {% if app.user %}
                <aside>
                    <div class="main">
                        <div>
                            <!-- ACCOUNT DIV -->
                            {{ render(controller(
                                'App\\Controller\\DashboardController::accountList'
                            )) }}
                        </div>
                        <!--
                        <ul class="nav-account">
                            <li><a href="{{ path('dashboard') }}">Dashboard</a></li>
                            <li><a href="{{ path('profile') }}">Profile</a></li>
                            <li><a href="{{ path('app_logout') }}" class="btn">Déconnexion</a></li>
                        </ul> -->

                        <ul class="bot">
                            <!--li><a href="">Ajouter une Debt</a></li-->
                            <li><a href="{{ path('create_income') }}">Ajouter une Income</a></li>
                            <li><a href="{{ path('create_expense') }}">Ajouter une Expense</a></li>
                        </ul>
                    </div>
                    <div class="bottom">
                        <ul class="bot">
                            <li><a href="{{ path('export_goals') }}" class="btn btn-success">Export Goals</a></li>
                            <li><a class="case" href="{{ path('profile') }}">Profile</a></li>
                            <li><a class="case" href="{{ path('app_logout') }}" class="btn">Déconnexion</a></li>
                        </ul>
                    </div>

                </aside>
            {% endif %}

            {% block body %}
            {% endblock %}
        </main>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // for opacity body animation on load
                document.body.classList.add('loaded');

            });
        </script>
    </body>
</html>
