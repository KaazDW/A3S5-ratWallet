<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/base.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>

    <body>
        <header>
            {% if app.user %}
                <img src="{{ asset('assets/images/logo/rW-logo-icon-white.png') }}" class="nav-logo" alt="Logo du site">
                {% if app.user is defined and app.user %}
                    <a class="name">{{ app.user.username }}</a>
                {% endif %}
                <div class="case"></div>
                <ul class="nav-account">
                    <li><a class="case" href="{{ path('dashboard') }}">Dashboard</a></li>
                    <li><a class="case" href="{{ path('profile') }}">Profile</a></li>
                    <li><a class="case" href="{{ path('app_logout') }}" class="btn">Déconnexion</a></li>
                </ul>

                <ul class="nav-bas">
                    <li><a class="case" href="{{ path('profile') }}">Profile</a></li>
                    <li><a class="case" href="{{ path('app_logout') }}" class="btn">Déconnexion</a></li>
                </ul>
            {% endif %}
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
